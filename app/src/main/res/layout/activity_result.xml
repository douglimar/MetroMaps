<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutResult"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.ddmsoftware.metromaps.ResultActivity">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
         />

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/photo_view2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/mapa_maceio" />

    <CheckBox
        android:id="@+id/chk_defaultmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/exibir_na_tela_inicial_mapa_padr_o"
        />


</LinearLayout>
